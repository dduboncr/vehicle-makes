generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model VehicleMake {
  id       Int           @id @default(autoincrement())
  makeId   String        @unique
  makeName String
  types    VehicleType[]
}

model VehicleType {
  id            Int          @id @default(autoincrement())
  typeId        String       @unique
  name          String
  VehicleMake   VehicleMake? @relation(fields: [vehicleMakeId], references: [makeId])
  vehicleMakeId String?
}
